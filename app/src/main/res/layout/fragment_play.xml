<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="85sp">

        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:fontFamily="monospace"
            android:padding="10sp"
            android:text="Now Playing"
            android:textAlignment="center"
            android:textColor="@color/teal"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="wrap_content"
            android:layout_height="650sp"
            android:layout_gravity="center"
            android:columnCount="5"
            android:rowCount="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/play_animation_view"
                android:layout_width="400sp"
                android:layout_height="400sp"
                android:layout_row="0"
                android:layout_rowSpan="5"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:paddingTop="-35sp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_music" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="400sp"
                android:layout_height="350sp"
                android:layout_row="0"
                android:layout_rowSpan="5"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_margin="2sp"
                android:paddingTop="45sp"
                android:src="@drawable/vinyl" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/thumbs"
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_row="9"
                android:layout_column="0"
                app:icon="@drawable/favorite_24px"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30sp"
                app:iconTint="@color/grey" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/previous"
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_marginStart="5sp"
                android:textColor="@color/white"
                app:icon="@drawable/fast_rewind_24px"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="35sp"
                app:iconTint="#f00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/play"
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_row="9"
                android:layout_column="2"
                android:layout_marginStart="5sp"
                android:textColor="@color/white"
                app:icon="@drawable/pause_circle_24px"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="40sp"
                app:iconTint="#f00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next"
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_row="9"
                android:layout_column="3"
                android:layout_marginStart="5sp"
                android:textColor="@color/white"
                app:icon="@drawable/fast_forward_24px"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="35sp"
                app:iconTint="#f00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shuffle"
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_row="9"
                android:layout_column="4"
                android:layout_marginStart="5sp"
                android:textColor="@color/white"
                app:icon="@drawable/shuffle_24px"
                app:iconGravity="textStart"
                app:iconPadding="2dp"
                app:iconSize="30sp"
                app:iconTint="@color/grey" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="400sp"
                android:layout_height="50sp"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_margin="2sp"
                android:layout_marginBottom="20sp" />

            <TextView
                android:id="@+id/singerName"
                android:layout_width="400sp"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_marginBottom="20sp"
                android:fontFamily="monospace"
                android:text="Singer"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/songName"
                android:layout_width="400sp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:singleLine="true"
                android:fontFamily="@font/poppins"
                android:text="Song Name"
                android:textAlignment="center"
                android:textSize="20sp" />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>