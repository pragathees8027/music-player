<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginBottom="12sp"
        android:fontFamily="monospace"
        android:padding="10sp"
        android:text="Music Player"
        android:textAlignment="center"
        android:textColor="@color/teal"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="404sp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recent_play"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="3sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="monospace"
            android:text="Recently \nPlayed"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recent_add"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="3sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="monospace"
            android:text="Recently \nAdded"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playlist"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="3sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="monospace"
            android:text="Playlist"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/most_played"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_row="3"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="3sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="monospace"
            android:text="Most \nPlayed"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20sp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="92sp"
        android:background="@color/glass_teal"
        android:columnCount="4"
        android:gravity="center"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playing"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1sp"
            android:backgroundTint="@color/glass"
            app:icon="@drawable/ic_music_note"
            app:iconGravity="textStart"
            app:iconPadding="0sp"
            app:iconSize="45sp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/song"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="5sp"
            android:layout_marginBottom="1sp"
            android:backgroundTint="@color/glass"
            app:icon="@drawable/ic_queue_music"
            app:iconGravity="textStart"
            app:iconPadding="0sp"
            app:iconSize="55sp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginStart="5sp"
            android:layout_marginBottom="1sp"
            android:backgroundTint="@color/glass"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="0sp"
            app:iconSize="65sp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculator"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_marginStart="5sp"
            android:layout_marginBottom="1sp"
            android:backgroundTint="@color/glass"
            app:icon="@drawable/ic_calculate"
            app:iconGravity="textStart"
            app:iconPadding="0sp"
            app:iconSize="45sp"
            app:iconTint="@color/black" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>