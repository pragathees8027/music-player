<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calcFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calculation"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:fontFamily="monospace"
            android:padding="10sp"
            android:text="Calculate Data Usage"
            android:textAlignment="center"
            android:textColor="@color/teal"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <GridLayout
            android:id="@+id/gridLayout3"
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculation">

            <TextView
                android:id="@+id/song_count_text"
                android:layout_width="150sp"
                android:layout_height="60sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_marginStart="25sp"
                android:gravity="center_vertical"
                android:text="Song Count :"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/song_count"
                android:layout_width="200sp"
                android:layout_height="60sp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:gravity="center_vertical"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/song_count_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_marginStart="15sp"
                android:gravity="center"
                android:text="( Enter the total no. of songs )"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/song_size_text"
                android:layout_width="150sp"
                android:layout_height="60sp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"

                android:layout_marginStart="25sp"
                android:layout_marginTop="30sp"
                android:gravity="center_vertical"
                android:text="Average Size :"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/song_size"
                android:layout_width="200sp"
                android:layout_height="60sp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_marginTop="30sp"
                android:gravity="center_vertical"
                android:spinnerMode="dropdown"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/song_size_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_marginStart="15sp"
                android:gravity="center"
                android:text="( Select song quality )"
                android:textSize="20sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/get_result"
                android:layout_width="200sp"
                android:layout_height="60sp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:backgroundTint="@color/blue"
                android:fontFamily="monospace"
                android:text="Get Usage"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </GridLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:gravity="center"
            android:text="( result )"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout3"
            tools:layout_editor_absoluteX="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>